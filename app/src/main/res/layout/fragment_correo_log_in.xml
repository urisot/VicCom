<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context="mx.com.viccom.viccom.Fragments.CorreoLogInFragment">

    <TextView
        android:id="@+id/txtIngresaCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEmail_log"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="Ingresa tu correo electrÃ³nico:"
        android:textColor="@color/icons"
        android:textSize="40sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/txtEmail_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/cuadros_texto_login"
        android:layout_marginTop="16dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:padding="8dp"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtEmail_log"
        android:layout_below="@+id/txtEmail_log"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:text="Registrarme"
        android:textColor="@color/icons"
        android:tooltipText="esto es una prueba del toltip text" />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtEmail_log"
        android:layout_below="@+id/checkedTextView"
        android:background="@android:color/transparent"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="@color/icons" />

</RelativeLayout>
