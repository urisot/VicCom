<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/restablece_con_backgrond"
    tools:context="mx.com.viccom.viccom.Fragments.ResConCambioConFragment">


    <RelativeLayout
        android:id="@+id/rlCambioCon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/llCamContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Escribe la contrase침a nueva a continuaci칩n:"
                android:textSize="35sp"
                android:textColor="@color/icons"
                android:fontFamily="@font/dni_condensed_bold"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <EditText
                    android:id="@+id/txtContrasena_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_24dp"
                    android:background="@drawable/cuadro_texto"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="35dp"
                    android:paddingLeft="8dp"
                    android:drawablePadding="8dp"
                    android:hint="Contrase침a"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:maxLength="12"/>
                <Button
                    android:id="@+id/btnHelpContrasena_reg"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/ic_help_black_24dp"
                    android:layout_marginEnd="10dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <EditText
                    android:id="@+id/txtConfirmContrasena_res"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_24dp"
                    android:background="@drawable/cuadro_texto"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="35dp"
                    android:paddingLeft="8dp"
                    android:drawablePadding="8dp"
                    android:hint="Confirmar contrase침a"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:maxLength="12"/>
                <Button
                    android:id="@+id/btnHelpConfirmCon_res"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/ic_help_black_24dp"
                    android:layout_marginEnd="10dp" />
            </FrameLayout>


            <Button
                android:id="@+id/btnCambiarCon"
                android:background="@drawable/boton_azul"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tildfgfdgjEmail"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Aceptar"
                android:textAllCaps="false"
                android:textColor="@color/icons"
                android:textDirection="inherit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbProgresoCambioCon"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            />
    </RelativeLayout>
</RelativeLayout>
