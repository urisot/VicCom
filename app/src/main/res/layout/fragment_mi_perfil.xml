<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.viccom.viccom.Fragments.MiPerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textVieyudfwsa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Mi cuenta de usuario"
            android:textSize="18sp"
         />
        <android.support.design.widget.TextInputLayout

            android:id="@+id/tilMediorInsfgh"
            android:layout_below="@+id/textVieyudfwsa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:tag="control">

            <EditText
                android:id="@+id/txtEmail_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/prompt_email"
                android:maxLines="1"
                android:singleLine="true"
                android:enabled="false">

            </EditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/tilMediorIns"
            android:layout_below="@+id/tilMediorInsfgh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:tag="control">

            <EditText
                android:id="@+id/txtNombre_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="textPersonName" >

            </EditText>

        </android.support.design.widget.TextInputLayout>



        <View
            android:id="@+id/seprador1"
            android:layout_below="@+id/tilMediorIns"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#efefef"/>

        <Button
            android:id="@+id/btnActualizar_mp"
            android:layout_below="@+id/seprador1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Actualizar"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnCambiarCon_mp"
            android:layout_below="@+id/btnActualizar_mp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Cambiar contraseÃ±a" />


    </RelativeLayout>

</FrameLayout>
