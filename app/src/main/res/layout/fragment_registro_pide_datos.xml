<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/registro_backgrond"
    tools:context="mx.com.viccom.viccom.Fragments.RegistroPideDatosFragment">

   <RelativeLayout
       android:id="@+id/rlPrincipal"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <ImageView
           android:id="@+id/imgUsuario"
           android:layout_width="235dp"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="-160dp"
           app:srcCompat="@drawable/usuario_registro"
           />

       <LinearLayout
           android:id="@+id/llRegistro"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginRight="16dp"
           android:layout_marginLeft="16dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:orientation="vertical" >

           <TextView
               android:id="@+id/textViewsdffg2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:layout_marginBottom="16dp"
               android:text="Regístrate aquí"
               android:textSize="39sp"
               android:textColor="@color/icons"
               android:fontFamily="@font/dni_condensed_bold"
               />



           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="18dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp">
               <EditText
                   android:id="@+id/txt_Nombre_reg"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nombre completo"
                   android:drawableLeft="@drawable/ic_person_gris_24dp"
                   android:ems="10"
                   android:inputType="textPersonName"
                   android:background="@drawable/cuadro_texto"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingRight="35dp"
                   android:paddingLeft="8dp"
                   android:drawablePadding="8dp"
                   android:maxLength="80"/>
               <Button
                   android:id="@+id/btnHelpNombre_reg"
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_gravity="end|center_vertical"
                   android:background="@drawable/ic_help_black_24dp"
                   android:layout_marginEnd="10dp" />
           </FrameLayout>


           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="18dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp">
               <EditText
                   android:id="@+id/txt_email_reg"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_email_24dp"
                   android:background="@drawable/cuadro_texto"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingRight="35dp"
                   android:paddingLeft="8dp"
                   android:drawablePadding="8dp"
                   android:hint="Email"
                   android:ems="10"
                   android:inputType="textEmailAddress"
                   android:maxLength="80"/>
               <Button
                   android:id="@+id/btnHelpEmail_reg"
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_gravity="end|center_vertical"
                   android:background="@drawable/ic_help_black_24dp"
                   android:layout_marginEnd="10dp" />
           </FrameLayout>


           <EditText
               android:id="@+id/txtCelular_reg"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:hint="Celular"
               android:ems="10"
               android:inputType="phone"
               android:visibility="gone"
               android:maxLength="10"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="18dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp">
               <EditText
                   android:id="@+id/txtContrasena_reg"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_lock_24dp"
                   android:background="@drawable/cuadro_texto"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp"
                   android:paddingRight="35dp"
                   android:paddingLeft="8dp"
                   android:drawablePadding="8dp"
                   android:hint="Contraseña"
                   android:ems="10"
                   android:inputType="textPassword"
                   android:maxLength="12"/>
               <Button
                   android:id="@+id/btnHelpContrasena_reg"
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_gravity="end|center_vertical"
                   android:background="@drawable/ic_help_black_24dp"
                   android:layout_marginEnd="10dp" />
           </FrameLayout>

           <EditText
               android:id="@+id/txtConfirmContrasena_reg"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="16dp"
               android:hint="Confirmar contraseña"
               android:ems="10"
               android:inputType="textPassword"
               android:visibility="gone"
               android:maxLength="9"/>


           <Button
               android:id="@+id/btnRegistrar"
               android:background="@drawable/boton_azul"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tildfgfdgjEmail"
               android:layout_marginBottom="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_marginTop="16dp"
               android:text="Enviar"
               android:textAllCaps="false"
               android:textColor="@color/icons"
               android:textDirection="inherit"
               android:textSize="18sp"
               android:textStyle="bold"
               android:layout_gravity="right"
               />


       </LinearLayout>

       <ProgressBar
           android:id="@+id/pbProgresoRegistro"
           style="?android:attr/progressBarStyleLarge"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_centerInParent="true"
           android:visibility="invisible"
           />
   </RelativeLayout>

</FrameLayout>
