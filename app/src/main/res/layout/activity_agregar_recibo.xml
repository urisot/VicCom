            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTitular"
                android:layout_below="@+id/textVieyudfwsa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:tag="control">
                <EditText
                    android:id="@+id/txtNombreTitular_ac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del titular"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="200" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:text="NOTA: Escribe el nombre del titular de la cuenta tal y como aparece en tu recibo."
                android:textColor="@android:color/holo_blue_dark" />

            <Button
                android:id="@+id/btnValidarCta_ac"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorAccent"
                android:layout_gravity="end"
                android:text="Agregar"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light" />

            <ProgressBar
                android:id="@+id/progressBar_ac"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
