        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/btn_cerrar_ac"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_cerrar_blanco_24dp" />
    </RelativeLayout >

    <ScrollView
        android:id="@+id/login_form"
        android:layout_below="@+id/rl_tituloy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_tituloy"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Agregar una cuenta"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <Button
                android:id="@+id/imageButton"
                style="@style/Animation.AppCompat.Dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cabecera"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/ic_barcode_scan"
                android:paddingRight="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorAccent"
                android:text="Escanear codigo de barras"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light" />

            <View
                android:id="@+id/separador1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/darker_gray" />
            <ImageView
                android:id="@+id/imgMuestra"
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:layout_gravity="center"
                android:background="@drawable/muestra" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilNumCta"
                android:layout_below="@+id/textVieyudfwsa2"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="bottom"
                android:tag="control">
                <EditText
                    android:id="@+id/txtNumeroCuenta_ac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:hint="Numero de cuenta"
                    android:inputType="number"
                    android:maxLength="6" />
            </android.support.design.widget.TextInputLayout>

