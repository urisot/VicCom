<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/restablece_con_backgrond"
    tools:context="mx.com.viccom.viccom.Fragments.ResConPideEmailFragment">

    <ProgressBar
        android:id="@+id/restablece_progress"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp" />
    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-120dp"
        android:layout_marginEnd="-24dp"
        app:srcCompat="@drawable/email_back"
        />

    <LinearLayout
        android:id="@+id/llRestablece"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewsdffg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Ingresa tu correo electronico y en breve te llegará el codigo para restablecer tu contraseña"
            android:textSize="35sp"
            android:textColor="@color/icons"
            android:fontFamily="@font/dni_condensed_bold"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <EditText
                android:id="@+id/txt_email_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_24dp"
                android:background="@drawable/cuadro_texto"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="35dp"
                android:paddingLeft="8dp"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLength="80"/>
            <Button
                android:id="@+id/btnHelpEmail_res"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/ic_help_black_24dp"
                android:layout_marginEnd="10dp" />
        </FrameLayout>

         <Button
            android:id="@+id/btnEnviar_res"
            android:background="@drawable/boton_azul"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tildfgfdgjEmail"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textColor="@color/icons"
            android:textDirection="inherit"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="right"
            />


    </LinearLayout>

</RelativeLayout>
